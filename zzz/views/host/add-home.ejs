<%- include('../partials/head') %>
  <title><%= pageTitle %></title>
  <link href="/output.css" rel="stylesheet">
</head>
<body class="bg-gray-900 text-gray-100">
  <%- include('../partials/nav') %>
  <header class="text-center py-4">
    <h1 class="text-3xl font-bold">Enter House Details:</h1>
  </header>
  <main class="flex justify-center items-center min-h-screen">
    <form action="/host/add-home" method="post" class="bg-gray-800 p-8 rounded-lg shadow-lg space-y-4">
      <input type="text" placeholder="House name" name="houseName" class="w-full p-2 rounded bg-gray-700 text-gray-100 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500">
      <input type="text" placeholder="Price" name="price" class="w-full p-2 rounded bg-gray-700 text-gray-100 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500">
      <input type="text" placeholder="Location" name="location" class="w-full p-2 rounded bg-gray-700 text-gray-100 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500">
      <input type="text" placeholder="Rating" name="rating" class="w-full p-2 rounded bg-gray-700 text-gray-100 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500">
      <input type="submit" value="Submit" class="w-full p-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition duration-300 cursor-pointer">
    </form>
  </main>
</body>
</html>