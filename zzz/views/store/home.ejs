<%- include('../partials/head') %>
  <title><%= pageTitle %></title>
  <!-- <link href="/output.css" rel="stylesheet"> -->
</head>
<body class="bg-gray-900 text-gray-100 min-h-screen">
  <%- include('../partials/nav') %>
  
  <div class="container mx-auto px-4 py-8">
    <header class="text-center mb-8">
      <h1 class="text-3xl font-bold">Available Homes</h1>
    </header>

    <main>
      <% if (registeredHomes && registeredHomes.length > 0) { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% registeredHomes.forEach(home => { %>
            <div class="bg-gray-800 p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
              <h2 class="text-xl font-bold mb-2"><%= home.houseName %></h2>
              <div class="space-y-2">
                <p class="text-gray-300">Price: $<%= home.price %></p>
                <p class="text-gray-300">Location: <%= home.location %></p>
                <p class="text-gray-300">Rating: <%= home.rating %>/5</p>
              </div>
              <button class="p-1.5 mt-4 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-300">Book</button>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <div class="text-center py-12">
          <p class="text-gray-400 text-lg">No homes available yet.</p>
          <a href="/host/add-home" class="inline-block mt-4 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors duration-300">
            Add a Home
          </a>
        </div>
      <% } %>
    </main>
  </div>
</body>
</html>